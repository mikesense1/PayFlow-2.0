{
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/dashboard",
      "destination": "/index.html"
    },
    {
      "source": "/create-contract",
      "destination": "/index.html"
    },
    {
      "source": "/blockchain-status",
      "destination": "/index.html"
    },
    {
      "source": "/milestone-tracker/(.*)",
      "destination": "/index.html"
    },
    {
      "source": "/client-payment/(.*)",
      "destination": "/index.html"
    }
  ]
}